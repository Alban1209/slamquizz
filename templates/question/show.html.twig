{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('question_index') }}">
        <button class="btn btn-primary" type="submit"><i class="fas fa-reply"></i>     Retour</button>
    </form>

    <form action="{{ path('question_edit', {'id': question.id}) }}">
        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>     Modifier</button>
    </form>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
