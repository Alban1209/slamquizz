{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ category.longname }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('category_index') }}">
        <button class="btn btn-primary" type="submit"><i class="fas fa-reply"></i>     Retour</button>
    </form>

    <form action="{{ path('category_edit', {'id': category.id}) }}">
        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>     Modifier</button>
    </form>


    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
