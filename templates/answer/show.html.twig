{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ answer.text }}</td>
            </tr>
            <tr>
                <th>Correct</th>
                <td>{{ answer.correct ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('answer_index') }}">
        <button class="btn btn-primary" type="submit"><i class="fas fa-reply"></i>     Retour</button>
    </form>

    <form action="{{ path('answer_edit', {'id': answer.id}) }}">
        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>     Modifier</button>
    </form>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
