{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Shortname</th>
                <th>Longname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.shortname }}</td>
                <td>{{ category.longname }}</td>
                <td>
                    <form action="{{ path('category_show', {'id': category.id}) }}">
                        <button class="btn btn-primary" type="submit"><i class="far fa-eye"></i>     Afficher</button>
                    </form>
                    <form action="{{ path('category_edit', {'id': category.id}) }}">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-pencil-square-o"></i>     Modifier</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form action="{{ path('category_new') }}">
        <button class="btn btn-primary" type="submit"><i class="far fa-plus-square"></i>     Créer une nouvelle catégorie</button>
    </form>
{% endblock %}
